---
const { tags } = Astro.props;

interface Props {
  tags: string[];
}
---

<div class="flex flex-wrap gap-2">
  {
    tags.map((tag) => (
      <a
        href={`/articles/tag/${tag}`}
        class="px-3 py-1 bg-accent-100 text-accent-700 rounded-full text-xs font-medium hover:bg-accent-200 transition-colors duration-200"
      >
        #{tag}
      </a>
    ))
  }
</div>

---
import MainLayout from "../../../layouts/MainLayout.astro";
import ArticleCard from "../../../components/ArticleCard.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { capitalize } from "../../../utils";

const { tag } = Astro.params;

if (tag === undefined) {
  throw new Error("Tag is requiered");
}

const allBlogArticles: CollectionEntry<"blog">[] = (
  await getCollection("blog")
).sort(
  (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const tagArticles = allBlogArticles.filter((article) =>
  article.data.tags.includes(tag)
);
---

<MainLayout>
  <a href="/articles" class="inline-block">Back to Articles</a>
  <h1>#{capitalize(tag)}</h1>
  <div class="grid">
    {tagArticles.map((article) => <ArticleCard article={article} />)}
  </div>
</MainLayout>
